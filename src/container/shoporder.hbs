<main>
    <h1 class="text-center my-5 col-8">{{header}}</h1>
    <div class="row col-12 g-3">
        <!--Left-size section-->
        <div class="col-8">            
            {{#with contacts_data}}
                <h2 class="mb-4">{{title}}</h2>
                <div class="mb-4">
                {{#each buttons}}
                    {{#if isPrimary}}
                        <button class="btn btn-warning me-2">{{text}}</button>
                    {{else}}
                        {{#if isOutline}}
                            <button class="btn btn-outline-warning">{{text}}</button>
                        {{/if}}
                    {{/if}}
                {{/each}}
                </div>
                {{#with form}}
                <div class="row g-5">
                    
                    <div class="col-6 ">
                        {{#with input}}
                            {{#with surname}}
                            <label class="form-label col-10">{{label}}</label>
                            <input class="fotm-control col-10" type="text" placeholder="{{placeholder}}">
                            <div class="fotm-text col-10">{{caption}}</div>
                            {{/with}}
                        {{/with}}
                    </div>
                    <div class="col-6">
                        {{#with input}}
                            {{#with name}}
                            <label class="form-label col-10">{{label}}</label>
                            <input class="fotm-control col-10" type="text" placeholder="{{placeholder}}">
                            <div class="fotm-text col-10">{{caption}}</div>
                            {{/with}}
                        {{/with}}
                    </div>
                    <div class="col-6">
                        {{#with input}}
                            {{#with phone}}
                            <label class="form-label col-10">{{label}}</label>
                            <input class="fotm-control col-10" type="text" placeholder="{{placeholder}}">
                            <div class="fotm-text col-10">{{caption}}</div>
                            {{/with}}
                        {{/with}}
                    </div>
                    <div class="col-6">
                        {{#with input}}
                            {{#with email}}
                            <label class="form-label col-10">{{label}}</label>
                            <input class="fotm-control col-10" type="text" placeholder="{{placeholder}}">
                            <div class="fotm-text col-10">{{caption}}</div>
                            {{/with}}
                        {{/with}}
                    </div>
                    
                </div>
                <hr>
                <div class="my-4">
                    {{#each switch}}
                    <div class="form-check form-switch">
                        <label class="form-check-label">{{text}}</label>
                        <input {{#if isActive}} checked {{/if}}  type="checkbox" class="form-check-input">
                    </div>
                    {{/each}}
                </div>
                <hr>
                {{/with}}
            {{/with}}
            {{#with delivery}}
                <h2 class="m-4">{{title}}</h2>
                <div class="card">
                    <div class="row">
                        {{#each select}}
                        <div class="card-body col-6">
                            <label class="form-label">
                            {{label}}
                            </label>
                            <select class="form-select">
                                {{#each options}}
                                <option >{{value}}. {{text}}</option>
                                {{/each}}
                            </select>
                        </div>
                        {{/each}}
                    </div>
                </div>
                <div class="col-12 my-4">
                {{#each delivery_type}}
                <div class="form-check">
                    <label class="form-check-label">{{type}}</label>
                    <input name="type" type="radio" class="form-check-input">                    
                </div>
                {{/each}}
                </div>
                <hr>
                {{#with payment}}
                <h2 class="my-4">{{title}}</h2>
                    {{#each list}}
                    <div class="form-check">
                        <label class="form-check-label">{{type}}</label>
                        <input name="type1" type="radio" class="form-check-input">                    
                    </div>
                    <div class="text-lowercase mb-2">{{description}}</div>
                    {{/each}}
                {{/with}}
            {{/with}}            
        </div>
        <!--Right-size section-->
        <div class="col-4">           
            <div class="card">
                {{#each action_block}}
                <div class="card-body m-0 p-1">           
                    {{#if isSuccess}}
                    <button class="btn btn-success">{{text}}</button>
                    {{else}}
                        {{#if isDanger}}
                        <button class="btn btn-danger">{{text}}</button>
                        {{else}}
                            {{#if isInfo}}
                            <button class="btn btn-info">{{text}}</button>
                            {{/if}}
                        {{/if}}
                    {{/if}}
                </div>  
                {{/each}}          
            </div>
            <div class="card mt-4 p-2">
                {{#with total}}
                <h2>{{title}}</h2>
                    {{#each item_list}}
                    <div>
                        {{name}}: {{price}}
                    </div>
                    {{/each}}
                    <hr>
                    {{#each additional_info}}
                    <div>
                        {{text}}: {{value}}
                    </div>
                    {{/each}}
                    <hr>
                    {{#with total_price}}
                    <div>{{text}}: {{value}}</div>
                    {{/with}}
                    <hr>
                    {{#each button}}
                    {{#if isPrimary}}
                    <button class="btn btn-primary mb-2">{{text}}</button>
                    {{else}}
                        {{#if isOutline}}
                        <button class="btn btn-outline-primary">{{text}}</button>
                        {{/if}}
                    {{/if}}
                    {{/each}}
                {{/with}}
            </div>            
        </div>
    </div>
</main>